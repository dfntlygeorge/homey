model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime? @map("email_verified")
    image         String?
    accounts      Account[]
    sessions      Session[]

    role UserRole?

    listings      Listing[]
    reviews       Review[]
    notifications Notification[]
    createdAt     DateTime       @default(now()) @map("created_at")

    @@map("users")
}
